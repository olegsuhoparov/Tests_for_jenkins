node {
    stage 'Clone the project'
    git 'https://github.com/olegsuhoparov/Tests_for_jenkins.git'

    dir('tests') {

        stage("Tests and Deployment") {
            stage("Running unit tests") {
                try {
                    if (isUnix()) {
                        sh "pytest test_x3.py"
                    } else {
                        bat "chcp 65001"
                        bat "pytest test_x3.py"
                    }
                } catch(err) {
                    step([$class: 'JUnitResultArchiver', testResults: '**/target/surefire-reports/TEST-*UnitTest.xml'])
                    throw err
                }
            }
        }
    }
}
