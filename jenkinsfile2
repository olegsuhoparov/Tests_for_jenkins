pipeline {
    agent any
    environment {
      PROJECT_NAME = "Neptun"
    }

    stages {
        stage('1-Build') {
            steps {
                bat 'python -m venv env'
                bat 'pip install -r requirements.txt'
                bat 'pytest --version'
            }
        }
        stage('2-Test') {
            steps {
                echo "Start of Stage Test..."
                echo "Testing......."
                echo "Privet ${PROJECT_NAME}"
                echo "End of Stage Build..."
            }
        }	
    }
}
