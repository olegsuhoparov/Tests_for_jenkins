pipeline {
    agent any
    environment {
      PROJECT_NAME = "Neptun"
    }

    stages {
        stage('1-Build') {
            steps {
                bat 'python -m venv env'
                bat 'pip install -r requirements.txt'
                bat 'pytest --version'
            }
        }
        stage('2-Test') {
            steps {
                bat 'cd tests && pytest test_x.py'
            }
        }	
    }
    post {
        always {
            script {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'target/allure-results']]
                ])
            }
        }
    }
}
