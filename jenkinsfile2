pipeline {
    agent any
    environment {
      PROJECT_NAME = "Neptun"
      virtualenv venv --distribute
      pip install -r requirements.txt
    }

    stages {
        stage('1-Build') {
            steps {
                echo "Start of Stage Build..."
                echo "Building......."
                bat "python --version"
                echo "End of Stage Build..."
            }
        }
        stage('2-Test') {
            steps {
                echo "Start of Stage Test..."
                echo "Testing......."
                echo "Privet ${PROJECT_NAME}"
                echo "End of Stage Build..."
            }
        }	
    }
}
