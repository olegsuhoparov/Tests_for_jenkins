pipeline {
    agent any
    environment {
      PROJECT_NAME = "Neptun"
      OWNER_NAME   = "Denis Astahov"
    }

    stages {
        stage('1-Build') {
            steps {
                bat "mkdir environments"
                bat "cd environments"
                bat "install -pip"
                bat "pip install -r requirements.txt"
                echo "End of Stage Build..."
            }
        }
        stage('2-Test') {
            steps {
                echo "Start of Stage Test..."
                echo "Testing......."
                echo "Privet ${PROJECT_NAME}"
                echo "Owner is ${OWNER_NAME}"
                bat "pytest"
                echo "End of Stage Build..."
            }
        }
        stage('3-Celebrate') {
            steps {
                echo "CONGRATULYACIYA!"
            }
        }	
    }
}
